<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dp"
        android:background="@color/transparent_background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="一周预报"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            >

         <com.ard.weather.activity.widget.WeatherTime
             android:id="@+id/weather_time1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="@color/transparent_background3"
             >
         </com.ard.weather.activity.widget.WeatherTime>
            <com.ard.weather.activity.widget.WeatherTime
                android:id="@+id/weather_time2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.ard.weather.activity.widget.WeatherTime>
            <com.ard.weather.activity.widget.WeatherTime
                android:id="@+id/weather_time3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.ard.weather.activity.widget.WeatherTime>
            <com.ard.weather.activity.widget.WeatherTime
                android:id="@+id/weather_time4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.ard.weather.activity.widget.WeatherTime>
            <com.ard.weather.activity.widget.WeatherTime
                android:id="@+id/weather_time5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.ard.weather.activity.widget.WeatherTime>
            <com.ard.weather.activity.widget.WeatherTime
                android:id="@+id/weather_time6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.ard.weather.activity.widget.WeatherTime>
            <com.ard.weather.activity.widget.WeatherTime
                android:id="@+id/weather_time7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.ard.weather.activity.widget.WeatherTime>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <com.ard.weather.activity.widget.MyChartView
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            >
        </com.ard.weather.activity.widget.MyChartView>

        <com.ard.weather.activity.widget.MyChartView
            android:id="@+id/chart2"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_below="@+id/chart1"
            android:layout_marginTop="-25dp" >
        </com.ard.weather.activity.widget.MyChartView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
        <com.ard.weather.activity.widget.WeatherNighView
            android:id="@+id/weather_nigh1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.ard.weather.activity.widget.WeatherNighView
            android:id="@+id/weather_nigh2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.ard.weather.activity.widget.WeatherNighView
            android:id="@+id/weather_nigh3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.ard.weather.activity.widget.WeatherNighView
            android:id="@+id/weather_nigh4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.ard.weather.activity.widget.WeatherNighView
            android:id="@+id/weather_nigh5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.ard.weather.activity.widget.WeatherNighView
            android:id="@+id/weather_nigh6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.ard.weather.activity.widget.WeatherNighView
            android:id="@+id/weather_nigh7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>