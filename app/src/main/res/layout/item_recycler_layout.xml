<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="68dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/item_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:00"
        />

    <ImageView
        android:id="@+id/item_iv_logo"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_type_cloudy"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        />

    <TextView
        android:id="@+id/item_text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴"
        android:layout_marginTop="1dp"
        />

    <TextView
        android:id="@+id/item_text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18°"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        />

</LinearLayout>